{
  "site": "animekisa.cc",
  "server": {
    "name": "adora",
    "version": "0.0.1"
  },
  "environment": {
    "corsProxy": "https://api.allorigins.win/get?url="
  },
  "actions": {
    "search": [
      {
        "searchPage": ["request", {
          "url": "~corsProxy~ + https://animekisa.cc/search?name= + ~searchPhrase~",
          "method": "get"
        }]
      },
      {
        "title": ["query", {
          "load": "~searchPage.data~",
          "selector": "html title > title",
          "attribute": "text"
        }]
      },
      {
        "items": ["forEach", "itemName", "~list~", {
          "steps": [
            {
              "sumn": ["query", {
                "load": "~itemName.data~",
                "selector": "h1.boom > a",
                "attribute": "href"
              }]
            }
          ]
        }]
      },
      {
        "sumn": ["query", {
          "load": "~searchPage.data~",
          "selector": "h1.boom > a",
          "attribute": "href"
        }]
      }
    ]
  }
}
