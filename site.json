{
  "site": "animekisa.cc",
  "server": {
    "name": "adora",
    "version": "0.0.1"
  },
  "environment": {
    "corsProxy": "https://api.allorigins.win/get?url="
  },
  "actions": {
    "search": [
      {
        "request": {
          "url": "~corsProxy~ + https://animekisa.cc/search?name= + ~searchPhrase~",
          "method": "get"
        }
      },
      {
        "query": {
          "selector": "html title",
          "attribute": "text"
        }
      },
      {
        "query": {
          "selector": "h1.boom > a",
          "attribute": "href"
        }
      },
    ],
    
    
// another way??
    "search": [
      {
        "function": "request",
        "params": {
          "url": "~corsProxy~ + https://animekisa.cc/search?name= + ~searchPhrase~",
          "method": "get"
        },
        "returnValueAs": "searchPage"
      },
      [
        {
          "function": "query",
          "params": {
            "load": "~searchPage.data~"
            "selector": "html title > title",
            "attribute": "text"
          },
          "returnValueAs": "title"
        },
        {
          "function": "query",
          "params": {
            "load": "~searchPage.data~"
            "selector": "h1.boom > a",
            "attribute": "href"
          },
          "returnValueAs": "sumn"
        },
      ]
    ]
  }
}
